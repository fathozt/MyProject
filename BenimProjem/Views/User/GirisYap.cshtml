@model AppUserGirisYapVM
@{
    Layout = "_Layout1";
}

<h1>Giriş Yap</h1>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6"><partial name="~/Views/Partials/MesajlarPartial.cshtml" /></div>
    <div class="col-md-3"></div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-action="GirisYap" asp-controller="User" method="post" style="margin:0 auto;float:none;">
            <div class="form-group">
                <label>Username&Email</label>
                <input type="text" asp-for="UsernameorEmail" class="form-control" placeholder="Username&Email">
                <small class="form-text text-muted"><span asp-validation-for="UsernameorEmail" style="color:red"></span></small>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                <small class="form-text text-muted"><span asp-validation-for="Password" style="color:red"></span></small>
            </div>
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
            <a asp-action="KayitOl" asp-controller="User" style="float:right">Kayıt Ol</a>
            <p style="float:right;padding:0px 2px 0px 2px">  |  </p>
            <a asp-action="SifreTalep" asp-controller="User" style="float:right">Şifremi unuttum</a>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>


