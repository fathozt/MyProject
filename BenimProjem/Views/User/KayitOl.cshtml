@model AppUserKayitOlVM
@{
    Layout = "_Layout1";
}


<h1>KayıtOl</h1>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6"><partial name="~/Views/Partials/MesajlarPartial.cshtml" /></div>
    <div class="col-md-3"></div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-action="KayitOl" asp-controller="User" method="post" style="margin:0 auto;float:none;">
            <div class="form-group">
                <label>Username</label>
                <input type="text" asp-for="Username" class="form-control" placeholder="Username">
                <small class="form-text text-muted"><span asp-validation-for="Username" style="color:red"></span></small>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                <small class="form-text text-muted"><span asp-validation-for="Email" style="color:red"></span></small>

            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="">
                <small class="form-text text-muted"><span asp-validation-for="Password" style="color:red"></span></small>

            </div>
            <div class="form-group">
                <label>Password Confirm</label>
                <input type="password" asp-for="PasswordConfirm" class="form-control">
                <small class="form-text text-muted"><span asp-validation-for="PasswordConfirm" style="color:red"></span></small>
            </div>
            <button type="submit" class="btn btn-primary">Kayıt ol</button>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>



