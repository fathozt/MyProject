@model AppUserSifreTalepVM
@{
    Layout = "_Layout1";
}

<h1>Sifre Talep</h1>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6"><partial name="~/Views/Partials/MesajlarPartial.cshtml" /></div>
    <div class="col-md-3"></div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-action="SifreTalep" asp-controller="User" method="post">
            <div class="form-group">
                <label>Yeni şifre oluşturmak için Email adresinizi giriniz.</label>
                <input class="form-control" type="email" asp-for="Email" placeholder="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

