@model List<AppRoleAtaVM>
@{
    ViewData["Title"] = "RolAta";
    Layout = "~/Areas/yonetimPaneli/Views/Shared/_Layout.cshtml";
}

<h1>RolAta Index</h1>

<div class="row">
    <form asp-action="RolAta" asp-controller="User" method="post">
        @for (int i = 0; i < Model.Count; i++)
        {

            <div class="form-check">
                <input type="hidden" asp-for="@Model[i].Name" />
                <input type="hidden" asp-for="@Model[i].Id" />

                <input class="form-check-input" type="checkbox" asp-for="@Model[i].HasAssigned">
                <label class="form-check-label" for="">@Model[i].Name</label>
            </div>
        }

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Rolleri Ata</button>
            </div>
        </div>
    </form>
</div>


